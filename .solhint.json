{
  "extends": "solhint:recommended",
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "error",
    "quotes": ["error", "single"],
    "compiler-version": ["error", "^0.8.3"],
    "func-visibility": ["warn", { "ignoreConstructors": true }],
    "no-empty-blocks": "off",
    "reason-string": ["warn", { "maxLength": 64 }]
  }
}
