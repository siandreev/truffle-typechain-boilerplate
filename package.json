{
  "name": "truffle-typechain-boilerplate",
  "version": "0.0.1",
  "license": "GNU-3.0",
  "scripts": {
    "generate-types": "typechain --target=truffle-v5 'build/contracts/*.json'",
    "postinstall": "truffle compile && yarn generate-types",
    "build": "tsc -p ./tsconfig.migrate.json --outDir migrations",
    "compile": "truffle compile",
    "build:test": "tsc -p ./tsconfig.test.json --outDir test",
    "migrate": "truffle migrate --reset --network kovan && sleep 10 && yarn verify",
    "bm": "yarn compile && yarn build && yarn mitgrate",
    "test": "yarn compile && yarn build && yarn build:test && truffle test --network kovan",
    "verify": "truffle run verify ERC1155Rubic --network kovan",
    "lint": "./node_modules/.bin/solhint -f table contracts/**/*.sol && eslint test-ts/** migrations-ts/**",
    "format": "prettier --write contracts/**/*.sol && eslint test-ts/** migrations-ts/** --fix"
  },
  "dependencies": {},
  "devDependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "@truffle/hdwallet-provider": "^1.5.0",
    "@typechain/truffle-v5": "^5.1.0",
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/web3": "^1.2.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-airbnb-typescript": "^14.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "openzeppelin-contracts": "^4.0.0",
    "openzeppelin-solidity": "^4.3.2",
    "openzeppelin-test-helpers": "^0.5.1",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "truffle": "^5.4.13",
    "truffle-hdwallet-provider": "^1.0.17",
    "truffle-plugin-verify": "^0.5.15",
    "typechain": "^5.1.2",
    "typescript": "^4.4.3",
    "web3": "^1.6.0",
    "web3-core": "^1.6.0",
    "web3-eth-contract": "^1.6.0"
  }
}
